{
  "servers": {
    "Atlassian": {
      "command": "powershell",
      "args": [
        "-NoProfile", "-ExecutionPolicy", "Bypass", "-File",
        "C:/Users/<your-os-username>/bin/mcp-atlassian-wrapper.ps1"
      ],
      "env": {
        "ATLASSIAN_DOMAIN": "guttmacher.atlassian.net",
        "ATLASSIAN_EMAIL": "<your-email>@guttmacher.org",
        "AUTH_METHOD": "api_token"
      },
      "working_directory": null
    },
    "Context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "env": {},
      "working_directory": null
    },
    "GitHub": {
      "command": "powershell",
      "args": [
        "-NoProfile", "-ExecutionPolicy", "Bypass", "-File",
        "C:/Users/<your-os-username>/bin/mcp-github-wrapper.ps1"
      ],
      "env": {},
      "working_directory": null
    },
    "Bitbucket": {
      "command": "powershell",
      "args": [
        "-NoProfile", "-ExecutionPolicy", "Bypass", "-File",
        "C:/Users/<your-os-username>/bin/mcp-bitbucket-wrapper.ps1"
      ],
      "env": {
        "ATLASSIAN_BITBUCKET_USERNAME": "<your-bitbucket-username>"
      },
      "working_directory": null
    }
  }
}

